<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="UI.controllers.shipments.ShipmentSectionController"
    alignment="CENTER"
    spacing="15"
    prefWidth="400"
    prefHeight="300"
    style="-fx-background-color: #f9f9f9;">
 
        <padding>
            <Insets top="40" bottom="40" left="40" right="40" />
        </padding>

        <Button text="Add Shipment" prefWidth="200" onAction="#handleAdd" />
        <Button text="Update Shipment" prefWidth="200" onAction="#handleUpdate" />
        <Button text="Search about Shipment" prefWidth="200" onAction="#handleSearch" />

 </VBox>