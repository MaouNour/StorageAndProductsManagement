<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="UI.controllers.products.ProductSectionController"
    alignment="CENTER"
    spacing="15"
    prefWidth="400"
    prefHeight="300"
    style="-fx-background-color: #f9f9f9;">


    <padding>
        <Insets top="40" bottom="40" left="40" right="40" />
    </padding>

    <Button text="Add Product" prefWidth="200" onAction="#handleAdd" />
    <Button text="Update Product" prefWidth="200" onAction="#handleUpdate" />
    <Button text="Search about Product" prefWidth="200" onAction="#handleSearch" />
    <Button text="Delet Product" prefWidth="200" onAction="#handleDelete" />

</VBox>